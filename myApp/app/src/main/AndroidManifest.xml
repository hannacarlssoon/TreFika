<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tda367.myapplication">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Controller.MainActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/generalnotitle">
            <!--android:theme="@style/AppTheme.NoActionBar"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.PassedLevel"
            android:theme="@style/AppTheme.popup" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity android:name=".Controller.ActivityInfo" />
        <activity android:name=".Controller.QuestionMultiChoice" />
        <activity
            android:name=".Controller.FailedLevel"
            android:theme="@style/AppTheme.popup">
        </activity>

        <activity android:name=".Controller.DragNDrop" />
        <activity android:name=".Controller.FillInTheBlanks">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controller.OutprintQuestion"/>
        <activity android:name=".Controller.LevelActivity"
            android:label="@string/app_name">
        </activity>


        <!-- Login with facebook stuff-->
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

    </application>

</manifest>
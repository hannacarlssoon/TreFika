<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="tda367.myapplication.controller.PlayFragment">

    <Button
        android:id="@+id/category1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="230dp"
        android:layout_height="85dp"
        android:layout_alignTop="@+id/imageViewCat2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundcornerbuttons"
        android:onClick="onClick"
        android:text="@string/categoryButton1"
        app:layout_constraintBottom_toTopOf="@+id/category2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002" />

    <Button
        android:id="@+id/category2"
        android:layout_width="230dp"
        android:layout_height="85dp"
        android:layout_alignStart="@+id/category3"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundcornerbuttons"
        android:onClick="onClick"
        android:text="@string/categoryButton2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view3"
        android:layout_width="7dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#000000"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category3" />

    <View
        android:id="@+id/view2"
        android:layout_width="7dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category1"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="7dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#000000"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category2" />

    <ImageView
        android:id="@+id/imageViewCat2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/category2"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="@+id/category2"
        app:layout_constraintRight_toRightOf="@+id/category2"
        app:layout_constraintTop_toTopOf="@+id/category2"
        app:layout_constraintVertical_bias="0.475"
        app:srcCompat="@drawable/ic_lock_black_24dp" />

    <Button
        android:id="@+id/category3"
        android:layout_width="230dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/category1"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundcornerbuttons"
        android:onClick="onClick"
        android:text="@string/categoryButton3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/imageViewCat1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/category1"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="@+id/category1"
        app:layout_constraintRight_toRightOf="@+id/category1"
        app:layout_constraintTop_toTopOf="@+id/category1"
        app:layout_constraintVertical_bias="0.475"
        app:srcCompat="@drawable/ic_lock_black_24dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/category3"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="@+id/category3"
        app:layout_constraintRight_toRightOf="@+id/category3"
        app:layout_constraintTop_toTopOf="@+id/category3"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@drawable/ic_lock_black_24dp" />

    <Button
        android:id="@+id/category4"
        android:layout_width="230dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/category1"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundcornerbuttons"
        android:onClick="onClick"
        android:text="@string/categoryButton4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <ImageView
        android:id="@+id/imageViewCat3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/category4"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="@+id/category4"
        app:layout_constraintRight_toRightOf="@+id/category4"
        app:layout_constraintTop_toTopOf="@+id/category4"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@drawable/ic_lock_black_24dp" />


</android.support.constraint.ConstraintLayout>

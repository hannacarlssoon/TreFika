<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tda367.myapplication.controller.PassedLevel" >

    <Button
        android:id="@+id/backButton"
        android:layout_width="88dp"
        android:layout_height="49dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="16dp"
        android:text="@string/PassedLevel_Button2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.134"
        android:layout_marginStart="56dp"

       />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/PassedLevel_Button1"
        app:layout_constraintBaseline_toBaselineOf="@+id/backButton"
        app:layout_constraintLeft_toRightOf="@+id/backButton"
        android:layout_marginLeft="7dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/passedHeading" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        app:layout_constraintRight_toLeftOf="@+id/imageView2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/passedHeading"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:srcCompat="@android:drawable/btn_star_big_off"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/passedHeading"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/passedHeading"
        android:layout_width="306dp"
        android:layout_height="34dp"
        android:text="@string/PassedLevel_heading"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp" />

</android.support.constraint.ConstraintLayout>

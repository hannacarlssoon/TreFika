<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tda367.myapplication.controller.FillInTheBlanks">


    <include
        android:id="@+id/include3"
        layout="@layout/toolbar_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="-588dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/fillQuestion"
        android:layout_width="352dp"
        android:layout_height="165dp"
        android:text="TextView"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/textFillAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView19"
        app:layout_constraintLeft_toRightOf="@+id/textView19"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <EditText
        android:id="@+id/textFillAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView20"
        app:layout_constraintLeft_toRightOf="@+id/textView20"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <EditText
        android:id="@+id/textFillAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView21"
        app:layout_constraintLeft_toRightOf="@+id/textView21"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="260dp"
        android:layout_height="25dp"
        android:text="Fill in the blanks"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=" 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/fillQuestion"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=" 2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=" 3"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/fillSubmit"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:text="Submit"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/textFillAnswer3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/hintButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/smallroundbutton"
        android:src="@mipmap/ic_launcher_questionmark"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.952" />

</android.support.constraint.ConstraintLayout>
